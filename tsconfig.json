{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./src/components/*",
        "./src/constants/*",
        "./src/assets/*",
        "./src/app/*",
        "./src/constants/Icons/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@icons/*": [
        "./src/constants/Icons/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
